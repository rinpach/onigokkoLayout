<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rinpach.onigokko.MainmenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Menu"
        android:id="@+id/SelectManu"
        android:layout_above="@+id/startsignupB"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ゲーム設定"
        android:id="@+id/gamestting"
        android:layout_above="@+id/gamestart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ゲーム開始"
        android:id="@+id/gamestart"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/gamestting"
        android:layout_alignStart="@+id/gamestting" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="サインアップ"
        android:id="@+id/startsignupB"
        android:layout_above="@+id/gamestting"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />
</RelativeLayout>
